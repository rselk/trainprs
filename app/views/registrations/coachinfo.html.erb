<h2>Please provide us additional information</h2>

<%= form_for @user, url: p_path(current_user.id) do |f| %>

  <div><%= f.label :name%><br />
  <%= f.text_field :name, autofocus: true %></div>

  <div><%= f.label :bio %><br />
  <%= f.text_area :bio %></div>

  <div><%= f.label :location %><br />
  <%= f.text_field :location %></div>

  <div><%= f.submit "Submit" %></div>
<% end %>

